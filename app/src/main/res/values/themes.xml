<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.HeadphoneTracker" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/primary_light</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>
        
        <!-- Tertiary/Accent -->
        <item name="colorTertiary">@color/accent</item>
        <item name="colorOnTertiary">@color/text_primary</item>
        
        <!-- Background and surface -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/nav_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        
        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigation</item>
        
        <!-- Window animations -->
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
    </style>
    
    <!-- Window Animations -->
    <style name="WindowAnimations">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <!-- Custom Card Style - Glassmorphism inspired -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
    </style>
    
    <!-- Elevated Card -->
    <style name="Widget.App.CardView.Elevated" parent="Widget.App.CardView">
        <item name="cardBackgroundColor">@color/card_highlight</item>
        <item name="cardElevation">8dp</item>
    </style>
    
    <!-- Custom Button Style - Gradient feel -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <!-- Outlined Button -->
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/glow_purple</item>
    </style>
    
    <!-- Tonal Button -->
    <style name="Widget.App.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/surface_elevated</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigation.ActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@color/glow_purple</item>
        <item name="elevation">0dp</item>
    </style>
    
    <style name="Widget.App.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/nav_indicator</item>
    </style>
    
    <!-- Base Text Appearance -->
    <style name="TextAppearance.App" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.App.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.App.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <!-- Big Time Display -->
    <style name="TextAppearance.App.TimeDisplay">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorError">@color/error</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyStyle</item>
    </style>

    <style name="AlertDialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AlertDialogBodyStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Material DatePicker Theme -->
    <style name="MaterialDatePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Header -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/background_dark</item>
        
        <!-- Surface (calendar background) -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Selected day -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        
        <!-- Today indicator -->
        <item name="colorOutline">@color/primary</item>
    </style>
</resources>
