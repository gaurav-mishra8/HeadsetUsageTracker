<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Icon/Illustration -->
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:scaleType="fitCenter"
            android:contentDescription="Onboarding illustration" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Headphone Tracker"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track your listening habits"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Content -->
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content goes here"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="8dp"
            android:gravity="center" />

        <!-- Bullet Points (for risks/limits) -->
        <LinearLayout
            android:id="@+id/bulletContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <!-- Trivia Card (for trivia pages) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTrivia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Did You Know?"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTrivia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trivia text"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>

