root = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{java,xml,gradle,properties,md}]
indent_style = space
indent_size = 2
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Kotlin-specific rules for ktlint
[*.kt]
max_line_length = 140
continuation_indent_size = 4
